#include <iostream>
using namespace std;

int main()
{
	float a, b, c, d;
	cout << "Program obliczajacy srednia arytmetyczna 4 liczb zmiennoprzecinkowych "<<endl;
	cout << "Podaj pierwsza liczbe " << endl;
	cin >> a>>endl;
	cout << "Podaj druga liczbe " << endl;
	cin >> b >> endl;
	cout << "Podaj trzecia liczbe " << endl;
	cin >> c >> endl;
	cout << "Podaj czwarta liczbe " << endl;
	cin >> d >> endl;
	cout << "Srednia arytmetyczna tych liczb to: " << (a + b + c + d) / 4;

}
   
